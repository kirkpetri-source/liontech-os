# === Client (Next.js) ===
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# opcional
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# === Server (Firebase Admin) ===
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Use \n para quebras de linha, ou rode em uma única linha entre aspas
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_AQUI\n-----END PRIVATE KEY-----\n"
# opcional (se diferente do padrão <project>.appspot.com)
FIREBASE_STORAGE_BUCKET=

# === Auth (JWT) ===
# Gere com: `openssl rand -base64 32`
AUTH_SECRET=
# Opcional, para proteger rota POST /api/auth/bootstrap
BOOTSTRAP_SECRET=

# === Config Admin (opcional) ===
ADMIN_CONFIG_PASSWORD=

# === WhatsApp Cloud API (opcional) ===
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_TEMPLATE_NAME=
WHATSAPP_TEMPLATE_LANG=pt_BR
# Segredo para links seguros da O.S. (modo 'link')
OS_SHARE_SECRET=

# === Server ===
PORT=3000
HOST=0.0.0.0
WA_HEADLESS=true

# Desativar WhatsApp Web (útil em serverless como Vercel)
# DISABLE_WHATSAPP_WEB=true

# === Prisma (se usar os endpoints com SQLite) ===
DATABASE_URL="file:./db/dev.db"

# === Seeds/Admin (opcional) ===
ADMIN_USUARIO=admin
ADMIN_SENHA=Admin@1234
ADMIN_EMAIL=admin@local
ADMIN_NOME=ADMINISTRADOR

# === Deploy (GHCR) ===
# Defina para o caminho completo do container image
# Ex.: ghcr.io/seu-usuario/liontech-os:latest
GHCR_IMAGE=